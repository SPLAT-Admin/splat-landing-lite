{
  "$schema": "https://openapi.vercel.sh/configuration/3.1/schema.json",
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install --frozen-lockfile && pnpm approve-builds -g || true",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "builds": [
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "env": {
    "CI": "false"
  }
}
